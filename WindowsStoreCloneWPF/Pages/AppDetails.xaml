<Page x:Class="WindowsStoreCloneWPF.Pages.AppDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsStoreCloneWPF.Pages"
      xmlns:uc="clr-namespace:WindowsStoreCloneWPF.UserControls"
      xmlns:ucappdet="clr-namespace:WindowsStoreCloneWPF.UserControls.AppDetailsTabContent"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AppDetails">

    <ScrollViewer Name="AppDetailsSV"
                  HorizontalScrollBarVisibility="Hidden"
                  VerticalScrollBarVisibility="Hidden"
                  Background="#2e2e2e">
        <StackPanel Name="AppDetailsPageMainStackPanel"
                    Orientation="Vertical"
                    Width="{Binding ElementName=AppDetailsSV, Path=ActualWidth}"
                    Background="#2e2e2e"
                    Margin="0,0,0,15">
            <uc:AppDetailsTitleAndBackground x:Name="AppDetailsAndBackgroundUC"/>

            <Grid Name="Tabs">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.15*"></ColumnDefinition>
                    <ColumnDefinition Width="0.70*"></ColumnDefinition>
                    <ColumnDefinition Width="0.15*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TabControl
                Name="AppDetailsTabControl"
                Grid.Column="1"
                HorizontalAlignment="Stretch">
                    <TabItem Header="Overview">
                        <ucappdet:Overview x:Name="OverviewTabUC"/>
                    </TabItem>
                    <TabItem Header="System Requirements">
                        <ucappdet:SystemRequirements />
                    </TabItem>
                    <TabItem Header="Reviews">
                        <ucappdet:Reviews/>
                    </TabItem>
                    <TabItem Header="Related">
                        <ucappdet:Related/>
                    </TabItem>
                </TabControl>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
