<UserControl x:Class="WindowsStoreCloneWPF.UserControls.HeaderRightButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsStoreCloneWPF.UserControls"
             mc:Ignorable="d" 
             Name="HeaderRightButtonUserControl"
             d:DesignHeight="40" d:DesignWidth="200" Height="40">
    <StackPanel
        Orientation="Horizontal"
        HorizontalAlignment="Right"
        >
        <Grid Name="SearchMenuItemHeader" VerticalAlignment="Center">
            <Button Visibility="Visible"
                    Height="40" Width="80"
                    x:Name="SearchButton"
                    Click="SearchButton_Click">Search</Button>
            <TextBox
                Name="SearchTextBox"
                Width="230"
                Visibility="Collapsed"
                Margin="2,2,2,2"></TextBox>
        </Grid>
        <Menu Name="SighInMenu">
            <MenuItem Height="40" Width="45" x:Name="SighInButton">
                <MenuItem.Header>
                    <Label VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="15"
                           Content="👤" />
                </MenuItem.Header>
                <MenuItem Header="Sign In"></MenuItem>
                <MenuItem Header="Add work of school account"></MenuItem>
            </MenuItem>
        </Menu>
        <Button Name="DownloadButton"
                Height="40" Width="35"
                Click="DownloadButton_Click">
            <Label VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="15"
                   FontWeight="Bold"
                   Content="⤓"/>
        </Button>
        <Menu Name="DotDotDotMenu">
            <MenuItem Height="40" Width="35" x:Name="DotDotDot">
                <MenuItem.Header>
                    <Label VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="15"
                   Content="..." />
                </MenuItem.Header>
                <MenuItem Header="Downloads and updates" Click="DownloadsAndUploadsMenuItem_Click"></MenuItem>
                <MenuItem Header="Settings"></MenuItem>
                <MenuItem Header="My Library"></MenuItem>
                <MenuItem Header="Send Feedback"></MenuItem>
            </MenuItem>
        </Menu>
    </StackPanel>
</UserControl>
